<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_image_pager"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    >
    <com.laojiang.imagepickers.widget.ImagePickerViewPager
        android:id="@+id/vp_image_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_title_bar"
        />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fl_tool_bar">
        <include layout="@layout/image_toolbar_head"/>
    </FrameLayout>
    <CheckBox
        android:id="@+id/ck_image_pager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@drawable/imagepicker_ck_pager_selector"
        android:checked="false"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="20dp"
        android:scaleX="1.2"
        android:scaleY="1.2"
        />
</RelativeLayout>
