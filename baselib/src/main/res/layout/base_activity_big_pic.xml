<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.youth.banner.Banner
            android:id="@+id/img_banner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:indicator_drawable_selected="@drawable/base_indicator_drawable_selected"
            app:indicator_drawable_unselected="@drawable/base_indicator_drawable_unselected"
            app:indicator_height="7dp"
            app:indicator_width="7dp"
            />
        <include layout="@layout/base_toolbar_head"
            />
    </FrameLayout>

</LinearLayout>