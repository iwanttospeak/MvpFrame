<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="SendCodeTV">
        <!--以下属性用来设置SendCodeTV的属性 -->
        <attr name="send_code_normal_background" format="color|reference"/>
        <attr name="send_code_wait_background" format="color|reference"/>
        <attr name="send_code_normal_text_color" format="color"/>
        <attr name="send_code_normal_text" format="string|reference"/>
        <attr name="send_code_wait_time" format="integer"/>
        <attr name="send_code_text_size" format="dimension"/>
    </declare-styleable>

    <!-- 圆形头像 -->
    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
        <attr name="civ_border_overlay" format="boolean" />
        <attr name="civ_fill_color" format="color" />
    </declare-styleable>

    <!-- 时间选择器 -->
    <declare-styleable name="PickerView">
        <!-- 是否循环显示-->
        <attr name="isLoop" format="boolean" />
    </declare-styleable>
</resources>