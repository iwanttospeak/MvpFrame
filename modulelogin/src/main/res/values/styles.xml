<?xml version="1.0" encoding="utf-8"?>
<resources>


    <!--   ____________________________________LinearLayout____________________________________     -->
    <!--登录模块LinearLayout包裹内容字 -->
    <style name="login_wrap_content_linear">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <!--   ____________________________________View ____________________________________     -->
    <!-- 分隔View自动适配剩下全部空间-->
    <style name="login_view_divide">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!-- 分隔View添加一个分割线-->
    <style name="login_view_divide_line">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:drawable">@color/base_bg_line_gray</item>
    </style>
    <!-- Relative的中心分隔View-->
    <style name="login_relative_view_center_divide">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <!--   ____________________________________EditView___________________________________     -->
    <style name="login_login_edit">
        <item name="android:textColorHint">@color/login_tv_small_gray</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/base_tv_little_black</item>
        <item name="android:background">@null</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">phone</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:minHeight">25dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:maxLines">1</item>
    </style>
    <!--   ____________________________________ImageView___________________________________     -->
    <!--登录模块登录的图标 -->
    <style name="login_image_icon">
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
    <!--   ____________________________________TextView ____________________________________     -->
    <!--登录模块textView包裹内容字 -->
    <style name="login_wrap_tv_gray">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/base_tv_more_gray</item>
        <item name="android:gravity">center</item>
    </style>

    <!--登录模块textView固定宽度 -->
    <style name="login_wrap_tv_center_vertical">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">65dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/base_tv_center_black</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:gravity">start</item>
        <item name="android:textSize">14sp</item>
    </style>
    <!--登录模块textView包裹内容水平居中 -->
    <style name="login_wrap_center_blue_bg">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingStart">70dp</item>
        <item name="android:paddingEnd">70dp</item>
        <item name="android:background">@drawable/login_oval_bg_blue_with_corner</item>
    </style>

    <!--登录模块textView width=0 -->
    <style name="login_wrap_tv_no_width">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/base_tv_more_gray</item>
        <item name="android:gravity">end</item>
    </style>
