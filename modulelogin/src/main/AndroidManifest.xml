<manifest xmlns:android="http://schemas.android.com/apk/res/android"

    package="com.app.modulelogin">

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true">

        <!--登陆页面和首页一样也是无法右划回到上一级页面的-->
        <activity android:name="com.app.modulelogin.ui.login.LoginActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            >
        </activity>

        <activity android:name=".ui.forget_password.ForgetPasswordActivity"
            android:launchMode="singleTop"
            />
        <activity android:name=".ui.forget_password.resetPassword.ResetPasswordActivity"
            android:launchMode="singleTop"
            />
    </application>

</manifest>

