<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--  支付方式  text -->
    <style name="base_recharge_dialog_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:drawablePadding">20dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/base_tv_gray</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:textSize">@dimen/base_text_size_14</item>
    </style>

    <!--支付dialog 中linearlayout -->
    <style name="base_linear_pay_dialog">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">43dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@color/white</item>
    </style>


    <!-- 分割线（横向）前后15dp间隔-->
    <style name="base_separate_horizontal_with_margin">
        <item name="android:background">@color/base_line_gray</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
    </style>

    <!--自动填充剩下的高度-->
    <style name="base_v_no_height_weight">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>


    <!--登陆-->
    <style name="login_LoginEtStyle">
        <item name="android:textColorHint">@color/base_tv_hint</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">26dp</item>
        <item name="android:layout_marginRight">26dp</item>
        <item name="android:background">@null</item>
        <item name="android:paddingBottom">13dp</item>
        <item name="android:paddingLeft">17dp</item>
        <item name="android:paddingTop">13dp</item>
        <item name="android:textColor">@color/base_tv_black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:drawablePadding">14dp</item>
    </style>

    <style name="BtOvalBgRed">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">26dp</item>
        <item name="android:layout_marginRight">26dp</item>
    </style>
</resources>